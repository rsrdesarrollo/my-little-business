                android:name="android.support.PARENT_ACTIVITY"
                android:value="es.ucm.pad.teamjvr.mylittlebusiness.activity.ProductListActivity" />
        </activity>
        <activity
            android:name="es.ucm.pad.teamjvr.mylittlebusiness.activity.SplashActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="es.ucm.pad.teamjvr.mylittlebusiness.activity.ProductDetailsActivity"
            android:label="@string/title_activity_product_details"
            android:windowSoftInputMode="stateUnchanged" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="es.ucm.pad.teamjvr.mylittlebusiness.activity.ProductListActivity" />
        </activity>
        <activity
            android:name="es.ucm.pad.teamjvr.mylittlebusiness.activity.AboutMLBActivity"
            android:label="@string/title_activity_about_mlb" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="es.ucm.pad.teamjvr.mylittlebusiness.activity.ProductListActivity" />
        </activity>
        <activity 
            android:name="es.ucm.pad.teamjvr.mylittlebusiness.activity.SettingsActivity"
            android:label="@string/title_activity_settings" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="es.ucm.pad.teamjvr.mylittlebusiness.activity.ProductListActivity" />
        </activity>
        <activity			android:name="es.ucm.pad.teamjvr.mylittlebusiness.activity.TopStatsActivity"
            android:label="@string/title_activity_stats" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="es.ucm.pad.teamjvr.mylittlebusiness.activity.ProductListActivity" />
        </activity>
    </application>

</manifest>
