<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="es.ucm.pad.teamjvr.mylittlebusiness"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <application
        android:name="es.ucm.pad.teamjvr.mylittlebusiness.MLBApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo" >
        <activity
            android:name="es.ucm.pad.teamjvr.mylittlebusiness.activity.ProductListActivity"
            android:label="@string/title_activity_product_list" >
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
        	android:name="es.ucm.pad.teamjvr.mylittlebusiness.activity.AddProductActivity"
            android:label="@string/title_activity_add_product" >
