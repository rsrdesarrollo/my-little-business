<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="es.ucm.pad.teamjvr.mylittlebusiness"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <application
        android:name="es.ucm.pad.teamjvr.mylittlebusiness.MLBApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name="es.ucm.pad.teamjvr.mylittlebusiness.ProductListActivity"
            android:label="@string/title_activity_product_list" >
        </activity>
        <activity
            android:name="es.ucm.pad.teamjvr.mylittlebusiness.AddProductActivity"
            android:label="@string/title_activity_add_product" >
             <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="es.ucm.pad.teamjvr.mylittlebusiness.ProductListActivity" />
        </activity>
        <activity
            android:name="es.ucm.pad.teamjvr.mylittlebusiness.SplashActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="es.ucm.pad.teamjvr.mylittlebusiness.ProductDetailsActivity"
            android:label="@string/title_activity_product_details"
            android:windowSoftInputMode="stateUnchanged" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="es.ucm.pad.teamjvr.mylittlebusiness.ProductListActivity" />
        </activity>
    </application>

</manifest>
